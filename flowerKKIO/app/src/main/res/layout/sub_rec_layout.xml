<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/top_of_sub_rec">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backBtn_subrec"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:src="@drawable/backbtn"
            android:background="#00ff0000"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/menubar_subrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/menubar"
            android:background="#00ff0000"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subrecScrollView" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recLinear"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/weatherTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OO님! 이런 꽃은 어때요? ✨"
                    android:textSize="20sp"
                    android:layout_marginBottom="10sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/flower1"
                    android:id="@+id/flower1"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subLinear"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꽃 정기구독, 시작해보세요. 💐"
                    android:textSize="20sp"
                    android:layout_marginBottom="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일상적인 순간을 특별하게, 여러분의 공간을 변화시켜보세요."
                    android:textSize="15sp"
                    android:layout_marginBottom="10sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="150sp"
                            android:layout_height="150sp"
                            android:scaleType="centerInside"
                            android:src="@drawable/flower_small"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Small"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginStart="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="심플한 매력의 꽃끼오의 시그니처\n\n13,900원"
                                android:textSize="13sp"/>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/subscribe_now"
                                android:layout_gravity="right"
                                android:layout_marginEnd="15sp"
                                android:layout_marginTop="10sp"
                                android:background="#00ff0000"
                                android:id="@+id/subscribe_now_small"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5sp">
                        <ImageView
                            android:layout_width="150sp"
                            android:layout_height="150sp"
                            android:scaleType="centerInside"
                            android:src="@drawable/flower_regular"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Regular"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginStart="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="작지도 크지도 않게, 어디에나 어울리는\n\n22,900원"
                                android:textSize="13sp"/>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/subscribe_now"
                                android:layout_gravity="right"
                                android:layout_marginEnd="15sp"
                                android:layout_marginTop="10sp"
                                android:background="#00ff0000"
                                android:id="@+id/subscribe_now_regular"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">
                    <ImageView
                        android:layout_width="150sp"
                        android:layout_height="150sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/flower_large"
                        android:layout_gravity="left"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Large"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_marginStart="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="공간을 풍부하게, 풍성한 사이즈\n\n31,900원"
                            android:textSize="13sp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/subscribe_now"
                            android:layout_gravity="right"
                            android:layout_marginEnd="15sp"
                            android:layout_marginTop="10sp"
                            android:background="#00ff0000"
                            android:id="@+id/subscribe_now_large"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>